{
  "name": "trydidact",
  "version": "1.0.0",
  "license": "MIT",
  "main": "dist/didact.umd.js",
  "module": "dist/didact.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "ava",
    "build:module": "rollup src/didact.js -f es -n didact -o dist/didact.es.js",
    "build:main": "rollup src/didact.js -f umd -n didact -o dist/didact.umd.js",
    "build": "run-p build:module build:main",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react"
  ],
  "devDependencies": {
    "ava": "^0.25.0",
    "babel-cli": "^6.26.0",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "babel-preset-env": "^1.6.1",
    "browser-env": "^3.2.5",
    "npm-run-all": "^4.1.2",
    "rollup": "^0.56.5"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "babel": {
    "plugins": [
      [
        "transform-react-jsx",
        {}
      ]
    ],
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
